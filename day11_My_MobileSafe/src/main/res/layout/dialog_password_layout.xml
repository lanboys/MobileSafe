<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/psd_dialog_title_tv"
        style="@style/Activity_Title_Style"
        android:text="请设置密码"/>

    <EditText
        android:id="@+id/psd_dialog_et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:inputType="numberPassword"
        android:paddingEnd="20dp"
        android:paddingLeft="15dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:textColor="?attr/colorControlActivated"
        android:textColorHint="@android:color/holo_green_light"/>

    <EditText
        android:id="@+id/psd_dialog_et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请再次输入密码"
        android:inputType="numberPassword"
        android:paddingEnd="20dp"
        android:paddingLeft="15dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:textColor="?attr/colorControlActivated"
        android:textColorHint="@android:color/holo_green_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/psd_dialog_ok_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/dg_btn_confirm_selector"
            android:text="ok"/>

        <Button
            android:id="@+id/psd_dialog_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/dg_btn_confirm_selector"
            android:text="cancel"/>

    </LinearLayout>
</LinearLayout>