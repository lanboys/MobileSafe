<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <TextView
        style="@style/Activity_Title_Style"
        android:text="手机防盗"/>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="安全号码"
            android:textSize="18sp"
            android:textColor="#212121"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:text="18627752172"
            android:textSize="18sp"
            android:textColor="#212121"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="防盗保护状态"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textColor="#212121"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_lostfind_lock_unlock"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:src="@drawable/unlock"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:onClick="reStartSetup"
        android:layout_width="match_parent"
        android:text="重新进入设置向导"
        android:textColor="#fff"
        android:textSize="18sp"
        android:background="@drawable/dialog_set_password_select"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:text="功能简介"
        android:textColor="#000"
        android:background="#ababab"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_height="40dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        style="@style/title_content"
        android:text="播放报警音乐#*alarm*#" />

    <TextView
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        style="@style/title_content"
        android:text="GPS追踪:#*location*#" />

    <TextView
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        style="@style/title_content"
        android:text="远程销毁数据#*wipedata*#" />

    <TextView
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        style="@style/title_content"
        android:text="远程锁屏#*lockscreen*#" />

</LinearLayout>