<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_advance_tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        style="@style/Activity_Title_Style"
        android:text="高级工具"/>


    <Button
        android:id="@+id/btn_advance_query"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:textColor="#fff"
        android:background="@drawable/dialog_set_password_select"
        android:layout_width="match_parent"
        android:text="查询号码归属地"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_advance_common_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/dialog_set_password_select"
        android:text="常用电话查询"
        android:textColor="#fff"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_advance_sms_backup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/dialog_set_password_select"
        android:text="短信备份"
        android:textColor="#fff"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_advance_app_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/dialog_set_password_select"
        android:text="程序锁"
        android:textColor="#fff"
        android:textSize="20sp"/>

</LinearLayout>
