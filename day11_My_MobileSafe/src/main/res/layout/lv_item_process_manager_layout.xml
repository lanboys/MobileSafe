<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/item_containerll"
              android:gravity="center"
              android:padding="5dp">

    <!--android:clickable="true"-->
    <ImageView
        android:id="@+id/iv_app_icon_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/a"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_app_icon_item"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_app_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="小码哥手机卫士"
            android:textColor="@android:color/black"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_app_location_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="手机内存"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/tv_app_size_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>

        <!--android:clickable="false"-->
        <!--android:focusable="false"-->
        <!--android:focusableInTouchMode="false"-->

</LinearLayout>